<launch>
  <arg name="use_sim_time" default="true"/>
  <param name="use_sim_time" value="$(arg use_sim_time)"/>

  <param name="robot_description" command="xacro $(find hebi_description)/urdf/kits/cricket.xacro" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true"/>
    <arg name="paused" value="true"/>
    <arg name="world_name" value="$(find hebi_gazebo)/worlds/basic_test.world"/>
  </include>

  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
        args="-z 1.0 -urdf -param robot_description -model Cricket -unpause" />

  <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <param name="publish_frequency" type="double" value="30.0" />
  </node>

  <node name="rviz" pkg="rviz" type="rviz"/>

</launch>
