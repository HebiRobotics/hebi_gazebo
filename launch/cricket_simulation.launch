<launch>
  <arg name="use_sim_time" default="true"/>
  <param name="use_sim_time" value="$(arg use_sim_time)"/>

  <param name="robot_description" command="$(find xacro)/xacro --xacro-ns $(find hebi_description)/urdf/kits/daisy.xacro" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="debug" value="false"/>
    <arg name="gui" value="true"/>
    <arg name="paused" value="true"/>
    <arg name="world_name" value="$(find hebi_gazebo)/worlds/basic_test.world"/>
  </include>

  <node name="spawn_model" pkg="gazebo_ros" type="spawn_model"
        args="-z 0.5 -urdf -param robot_description -model Daisy
              -J Cricket/L1_J1_shoulder1 0.0
              -J Cricket/L1_J2_shoulder2 0.0
              -J Cricket/L1_J3_knee 0.0
              -J Cricket/L1_J4_ankle 0.0
              -J Cricket/L1_J5_tread 0.0

              -J Cricket/L2_J1_shoulder1 0.0
              -J Cricket/L2_J2_shoulder2 0.0
              -J Cricket/L2_J3_knee 0.0
              -J Cricket/L2_J4_ankle 0.0
              -J Cricket/L2_J5_tread 0.0

              -J Cricket/L3_J1_shoulder1 0.0
              -J Cricket/L3_J2_shoulder2 0.0
              -J Cricket/L3_J3_knee 0.0
              -J Cricket/L3_J4_ankle 0.0
              -J Cricket/L3_J5_tread 0.0

              -J Cricket/L4_J1_shoulder1 0.0
              -J Cricket/L4_J2_shoulder2 0.0
              -J Cricket/L4_J3_knee 0.0
              -J Cricket/L4_J4_ankle 0.0
              -J Cricket/L4_J5_tread 0.0
              -unpause" />
</launch>
